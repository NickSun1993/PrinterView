                                          height:70
                                           error:&error];
            if (result) {
                
                CGImageRef image = [[ZXImage imageWithMatrix:result] cgimage ];
                NSLog(@"%@",image);
                
                UIImage *imag=[UIImage imageWithCGImage:image];
                
                self.barcodeImageView.image = imag;
                self.barcodeLabel.text = content;
